@page
@model BooksApp.Pages.BooksPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Books</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Books.Title" class="control-label"></label>
                <input asp-for="Books.Title" class="form-control" />
                <span asp-validation-for="Books.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.PublishDate" class="control-label"></label>
                <input asp-for="Books.PublishDate" class="form-control" />
                <span asp-validation-for="Books.PublishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.ReviewDate" class="control-label"></label>
                <input asp-for="Books.ReviewDate" class="form-control" />
                <span asp-validation-for="Books.ReviewDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Books.IsFamous" /> @Html.DisplayNameFor(model => model.Books.IsFamous)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Books.Review" class="control-label"></label>
                <input asp-for="Books.Review" class="form-control" />
                <span asp-validation-for="Books.Review" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.GenreId" class="control-label"></label>
                <select asp-for="Books.GenreId" class ="form-control" asp-items="ViewBag.GenreId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
